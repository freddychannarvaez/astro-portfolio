---
interface Props {
	routes: any[];
}

let { routes } = Astro.props;
---
<section class="header">
  {
    routes.map((route) => (
      route.icon == '' ?
      <a href={route.link}>{route.title}</a>
      :
      <a href={route.link}>
        {route.title}
        <img src={route.icon}/>
      </a>
    ))
  }
</section>
<style>
  .header {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    align-items: center;
    justify-content: center;
    column-gap: 20px;
    /* width: 100%; */
    height: 64px;
    background-color: transparent;
    position: sticky;
    top: 0px;
    z-index: 10;

    @media (width < 761px) {
      column-gap: 10;
    }
    @media (width < 399px) {
      justify-content: space-between;
    }
  }
  .header:hover {
    background-color: white;
    transition: 0.3s ease;

    a {
      box-shadow: 2px 2px 5px gray;
      transition: 0.7s ease;
    }
  }
  a {
    border-radius: 50px;
    text-decoration: none;
    color: black;
    font-weight: 500;
    padding: 5px 10px;
    background-color: white;
    min-width: 70px;
    
    @media (width < 761px) {
      padding: 5px 10px;
      min-width: unset;
    }
  }
  a:hover {
    transform: scale(105%);
    box-shadow: 1px 1px 5px black !important;
  }
  img {
    width: 20px;
  }
</style>