---
interface Props {
	link: string;
  icon: string;
  text: string;
}

const { link, icon, text } = Astro.props;
---
<a href={link} target="_blank" class="contact">
  <img src={icon}>
  {text}
</a>
<style>
.contact {
  min-width: 150px;
  max-width: 30%;
  height: 30px;
  border-radius: 50px;
  box-sizing: border-box;
  text-align: center;
  box-shadow: 2px 2px 5px gray;
  font-size: 18px;
  font-weight: 600;
  text-decoration: none;
  color: black;
  display: flex;
  column-gap: 10px;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  background-color: lightgray;
}
.contact:hover {
  box-shadow: 2px 2px 5px black;
}
</style>
