---
import ContactPill from './ContactPill.astro';
import AvailabilityPill from './AvailabilityPill.astro';

interface Props {
  content : {
    picture?: string;
    isAvailable?: boolean;
    languageCode?: string;
    link?: string;
    titleHeading?: string;
    description?: string;
    pills?: any[];
  }
}

const { content } = Astro.props;
---
<section id="overview" class="overview" data-header-theme='transparent'>
  <div class="picture-status">
    <div class="profile-img">
      <img src="/profile_picture.avif" alt='Freddy profile image'/>
    </div>
    <AvailabilityPill isAvailable={content.isAvailable!} languageCode={content.languageCode!} link={content.link}/>
  </div>
  <h1 class="title-heading">{content.titleHeading}</h1>
  <div class="main-description">
    <p>{content.description}</p>
  </div>
  <div class="contact">
    {
      content.pills?.map((pill) => (
        <ContactPill link={pill.link} icon={pill.icon} text={pill.text}/>
      ))
    }
  </div>
</section>
<style>
  .overview {
    margin: 0 15% 50px 15%;
    padding: 30px 0;
    display: flex;
    flex-direction: column;
    align-items: start;
    width: 600px;
    max-width: 80%;
    @media (width < 761px) {
      margin: 0 0 50px 50px;
    }
  }
  .picture-status {
    display: flex;
    flex-direction: row;
    column-gap: 30px;
    align-items: center;
    justify-content: center;
  }
  .profile-img {
    --profileImgSize: 64px;
    width: var(--profileImgSize);
    height: var(--profileImgSize);

    img {
      object-fit: cover;
      width: 100%;
      height: 100%;
      border-radius: 50%;
    }
  }
  .title-heading {
    margin: 24px 0 0 0;
    font-size: 40px;
  }
  .main-description {
    margin-top: 24px;
    font-size: 20px;

    p {
      margin: 0;
    }
  }
  .contact {
    margin-top: 24px;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    column-gap: 30px;
    font-size: 16px;

    @media (width < 600px) {
      row-gap: 20px;
    }
    @media (width < 414px) {
      justify-content: center;
    }
  }
</style>
